load("@npm//@bazel/typescript:index.bzl", "ts_config")
load("//tools:typescript.bzl", "ts_test_project")
load("@build_bazel_rules_nodejs//:index.bzl", "js_library")
load("//tools:typescript.bzl", "ts_project")
load("//tools:defaults.bzl", "karma_web_test_suite")

package(default_visibility = ["//visibility:public"])

exports_files([
    "tsconfig.lib.json",
    "tsconfig.spec.json",
    "karma.conf.js",
])

ts_config(
    name = "tsconfig-lib",
    src = "tsconfig.lib.json",
    deps = ["//:tsconfig.json"],
)

ts_config(
    name = "tsconfig-spec",
    src = "tsconfig.spec.json",
    deps = ["//:tsconfig.json"],
)

ts_project(
    name = "protocol-ts",
    srcs = glob(
        ["**/*.ts"],
        exclude = [
            "**/*.spec.ts",
            "src/test.ts",
        ],
    ),
    tsconfig = ":tsconfig-lib",
    deps = [
        "@npm//@angular/core",
        "@npm//@angular/platform-browser-dynamic",
        "@npm//@types",
    ],
)

js_library(
    name = "protocol",
    package_name = "protocol",
    deps = [":protocol-ts"],
)

ts_test_project(
    name = "protocol_test",
    srcs = glob(["**/*.spec.ts"]),
    deps = [
        ":protocol",
        "@npm//@angular/core",
        "@npm//@angular/platform-browser-dynamic",
        "@npm//@types",
    ],
)

karma_web_test_suite(
    name = "test",
    deps = [
        "//projects/protocol:protocol_test",
    ],
)
